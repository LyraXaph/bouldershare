mixin problemForm(problem = {})
    form(action=`/problemAdd/${problem._id || ''}` method="POST" class="card" enctype="multipart/form-data")
        label(for="gyms") Gym
        .search__gyms
            input.gyms__search__input(type="text" name="gyms__search" autocomplete="off")
            .gyms__search__results
        label(for="name") Name
        input(type="text" name="name" value=problem.name id="name") 
        label(for="description") Description
        textarea(type="text" name="description")= problem.description
        label(for="photo") Photo
        input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
        if problem.photo
            img(src=`/uploads/${problem.photo}` alt=problem.name width="200")
        input(type="submit", value="Save â†’" class="button")