extends layout

block content
    .single
        .single__hero
            img.single__image(src=`/uploads/${gym.photo || gym.png}`)
            h2.title.title--single
                a(href=`/gym/${gym.slug}`)= gym.name
    
    .single__details.inner
        p=gym.description

        if gym.tags
            ul.tags
                each tag in gym.tags
                    li.tag
                        a.tag__link(href=`/tags/${tag}`)
                        span.tag__text= tag